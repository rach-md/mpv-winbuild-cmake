#!/bin/sh
PROG=@CMAKE_INSTALL_PREFIX@/bin/ld.lld
TARGET=@TARGET_ARCH@
FLAGS="-m @ld_m_flag@"
FLAGS="$FLAGS @opt@"
FLAGS="$FLAGS -O3 -Xlink=-opt:lldlto=3 -Xlink=-opt:lldltocgo=3"

if [ "$CONF" == "1" ]; then
    SKIP_OPT="-O0 -Xlink=-opt:lldlto=0 -Xlink=-opt:lldltocgo=0 --no-gc-sections --no-guard-cf"
fi

"$PROG" "$@" $FLAGS @LLD_FLAGS@ $SKIP_OPT
